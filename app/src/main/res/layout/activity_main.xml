<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="24dp"
    android:background="@drawable/homescreen">

    <TextView
        android:id="@+id/textViewSpaceShip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/upheavtt"
        android:text="spaceSHIP"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="52dp"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/textViewRace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/upheavtt"
        android:text="race"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="72dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpaceShip"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/textViewAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/pixellari"
        android:paddingVertical="8dp"
        android:text="Account"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="600"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewRace"
        tools:layout_editor_absoluteX="24dp" />

    <ListView
        android:id="@+id/listView_1"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewAccount"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"

        android:dividerHeight="20dp"
        />

    <Button
        android:id="@+id/buttonCreateNewAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF910F"
        android:fontFamily="@font/upheavtt"
        android:text="create new account"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView_1" />

</androidx.constraintlayout.widget.ConstraintLayout>