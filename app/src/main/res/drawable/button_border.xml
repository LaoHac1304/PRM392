<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- Background color when pressed (you can change this) -->
            <stroke android:width="1dp" android:color="#FFFFFF" /> <!-- Border color (white) when pressed -->
            <corners android:radius="4dp" /> <!-- Corner radius of the rectangle -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000" /> <!-- Transparent background (8-digit color code) -->
            <stroke android:width="1dp" android:color="#FFFFFF" /> <!-- Border color (white) for the default state -->
            <corners android:radius="4dp" /> <!-- Corner radius of the rectangle -->
        </shape>
    </item>
</selector>
